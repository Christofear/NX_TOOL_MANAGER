<UserControl x:Class="NX_TOOL_MANAGER.Views.ClassTree"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:models="clr-namespace:NX_TOOL_MANAGER.Models"
             xmlns:services="clr-namespace:NX_TOOL_MANAGER.Services"
             xmlns:conv="clr-namespace:NX_TOOL_MANAGER.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="300">

    <UserControl.Resources>
        <!-- Converter (your updated single-binding version) -->
        <conv:IsLastItemInContainerConverter x:Key="IsLastItemInContainerConverter"/>

        <!-- TreeView chrome (unchanged look) -->
        <Style TargetType="TreeView">
            <Setter Property="Background" Value="#1E1E1E"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>

        <!-- ===== TreeViewItem: fixed connector lines ===== -->
        <Style TargetType="TreeViewItem">
            <Setter Property="Padding" Value="4,3"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TreeViewItem">
                        <StackPanel SnapsToDevicePixels="True">
                            <!-- HEADER ROW -->
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <!-- Left gutter for lines & expander -->
                                    <ColumnDefinition Width="19"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- L/T connectors beside the header -->
                                <Canvas Grid.Column="0" Width="19">
                                    <!-- Vertical (top -> center of header) -->
                                    <Line X1="9.5" Y1="0" X2="9.5" Y2="9.5"
                                          Stroke="#555555" StrokeThickness="1" SnapsToDevicePixels="True"/>

                                    <!-- Vertical (center -> bottom of header). Hidden for last child -->
                                    <Line x:Name="VerticalBelowHeader"
                                          X1="9.5" Y1="9.5" X2="9.5"
                                          Stroke="#555555" StrokeThickness="1" SnapsToDevicePixels="True">
                                        <Line.Y2>
                                            <Binding RelativeSource="{RelativeSource TemplatedParent}" Path="ActualHeight"/>
                                        </Line.Y2>
                                    </Line>

                                    <!-- Horizontal branch (trunk -> header) -->
                                    <Line X1="9.5" Y1="9.5" X2="19" Y2="9.5"
                                          Stroke="#555555" StrokeThickness="1" SnapsToDevicePixels="True"/>
                                </Canvas>

                                <!-- Expander + Header -->
                                <DockPanel Grid.Column="1">
                                    <!-- Toggle (keeps your +/- box look) -->
                                    <ToggleButton x:Name="Expander"
                                                  DockPanel.Dock="Left"
                                                  IsChecked="{Binding IsExpanded, RelativeSource={RelativeSource TemplatedParent}}"
                                                  Focusable="False"
                                                  Width="16" Height="16" Margin="0,0,4,0">
                                        <ToggleButton.Template>
                                            <ControlTemplate TargetType="ToggleButton">
                                                <Grid Width="16" Height="16" Background="#1E1E1E">
                                                    <Rectangle Width="12" Height="12" Stroke="#CCCCCC" StrokeThickness="1"/>
                                                    <Rectangle Width="8" Height="1" Fill="#CCCCCC"/>
                                                    <Rectangle x:Name="PlusVert" Width="1" Height="8" Fill="#CCCCCC"/>
                                                </Grid>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsChecked" Value="True">
                                                        <Setter TargetName="PlusVert" Property="Visibility" Value="Collapsed"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </ToggleButton.Template>
                                    </ToggleButton>

                                    <Border x:Name="Bd"
                                            Background="{TemplateBinding Background}"
                                            Padding="{TemplateBinding Padding}"
                                            CornerRadius="3">
                                        <ContentPresenter x:Name="HeaderHost"
                                                          ContentSource="Header"
                                                          VerticalAlignment="Center"
                                                          HorizontalAlignment="Left"/>
                                    </Border>
                                </DockPanel>
                            </Grid>

                            <!-- CHILDREN ROW -->
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="19"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- Main vertical trunk beside children (hidden for last child & roots) -->
                                <Line x:Name="ChildrenTrunk"
                                      Grid.Column="0"
                                      X1="9.5" X2="9.5"
                                      Stroke="#555555" StrokeThickness="1"
                                      VerticalAlignment="Stretch" Stretch="Fill"
                                      SnapsToDevicePixels="True"/>

                                <ItemsPresenter x:Name="ItemsHost" Grid.Column="1" Visibility="Collapsed"/>
                            </Grid>
                        </StackPanel>

                        <!-- Triggers -->
                        <ControlTemplate.Triggers>
                            <!-- Hide expander when no children -->
                            <Trigger Property="HasItems" Value="False">
                                <Setter TargetName="Expander" Property="Visibility" Value="Hidden"/>
                            </Trigger>

                            <!-- Expand/collapse -->
                            <Trigger Property="IsExpanded" Value="True">
                                <Setter TargetName="ItemsHost" Property="Visibility" Value="Visible"/>
                            </Trigger>

                            <!-- Selection + hover (keep your look) -->
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="HeaderHost" Property="TextElement.Foreground" Value="DodgerBlue"/>
                            </Trigger>
                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="IsMouseOver" Value="True"/>
                                    <Condition Property="IsSelected" Value="False"/>
                                </MultiTrigger.Conditions>
                                <Setter TargetName="Bd" Property="Background" Value="#3E3E42"/>
                            </MultiTrigger>

                            <!-- LAST CHILD: hide the tail under header and the children trunk -->
                            <DataTrigger
                                Binding="{Binding RelativeSource={RelativeSource TemplatedParent},
                                                  Converter={StaticResource IsLastItemInContainerConverter}}"
                                Value="True">
                                <Setter TargetName="VerticalBelowHeader" Property="Visibility" Value="Collapsed"/>
                                <Setter TargetName="ChildrenTrunk" Property="Visibility" Value="Collapsed"/>
                            </DataTrigger>

                            <!-- ROOT ITEMS (no ancestor TreeViewItem): hide all connectors -->
                            <DataTrigger Value="{x:Null}">
                                <DataTrigger.Binding>
                                    <Binding RelativeSource="{RelativeSource AncestorType=TreeViewItem}"/>
                                </DataTrigger.Binding>
                                <Setter TargetName="VerticalBelowHeader" Property="Visibility" Value="Collapsed"/>
                                <Setter TargetName="ChildrenTrunk" Property="Visibility" Value="Collapsed"/>
                            </DataTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>

            <!-- Optional: auto-expand roots -->
            <Style.Triggers>
                <DataTrigger Value="{x:Null}">
                    <DataTrigger.Binding>
                        <Binding RelativeSource="{RelativeSource AncestorType=TreeViewItem}"/>
                    </DataTrigger.Binding>
                    <Setter Property="IsExpanded" Value="True"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <!-- ===== Your existing data templates (unchanged) ===== -->

        <HierarchicalDataTemplate DataType="{x:Type models:DatDocumentRef}" ItemsSource="{Binding Children}">
            <Border Background="Transparent" ToolTipService.ShowDuration="60000" ToolTip="{Binding FullPath, Mode=OneWay}">
                <StackPanel Orientation="Horizontal">
                    <TextBlock FontFamily="Segoe MDL2 Assets" 
                               Text="&#xE72E;" 
                               VerticalAlignment="Center" 
                               Margin="0,0,5,0"
                               Foreground="#FFCC00"
                               ToolTip="This file is read-only.">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Visibility" Value="Collapsed" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsReadOnly}" Value="True">
                                        <Setter Property="Visibility" Value="Visible" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                    <TextBlock Text="{Binding DisplayFileName, Mode=OneWay}" FontSize="14" FontWeight="SemiBold" TextTrimming="CharacterEllipsis">
                        <TextBlock.ContextMenu>
                            <ContextMenu>
                                <MenuItem Header="Close" Click="UnloadMenuItem_Click"/>
                                <Separator/>
                                <MenuItem Header="Save" Click="SaveMenuItem_Click"/>
                                <MenuItem Header="Save As..." Click="SaveAsMenuItem_Click"/>
                            </ContextMenu>
                        </TextBlock.ContextMenu>
                    </TextBlock>
                </StackPanel>
            </Border>
        </HierarchicalDataTemplate>

        <HierarchicalDataTemplate DataType="{x:Type services:CategoryNode}" ItemsSource="{Binding Classes}">
            <TextBlock Text="{Binding Name}" FontWeight="SemiBold" IsHitTestVisible="False" Focusable="False" TextTrimming="CharacterEllipsis"/>
        </HierarchicalDataTemplate>

        <HierarchicalDataTemplate DataType="{x:Type models:DatClass}" ItemsSource="{Binding Children}">
            <TextBlock Text="{Binding DisplayHeader, Mode=OneWay}" TextTrimming="CharacterEllipsis"/>
        </HierarchicalDataTemplate>
    </UserControl.Resources>

    <!-- ===== Layout (unchanged) ===== -->
    <Grid Background="#2D2D2D">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0" DataContext="{x:Static services:LibraryManager.Instance}" Background="#2D2D2D">
            <StackPanel Margin="8">
                <TextBlock Text="Library Tree" FontWeight="SemiBold" FontSize="14"/>
                <TextBlock Text="{Binding SelectedDocumentUnits, StringFormat='Units: {0}', FallbackValue='Units:'}" Margin="0,2,0,0" Foreground="#CCCCCC"/>
            </StackPanel>
        </StackPanel>

        <Border Grid.Row="1" BorderBrush="#4A4A4A" BorderThickness="0,0,0,1"/>

        <TreeView x:Name="Tree"
                  Grid.Row="2"
                  Padding="4"
                  DataContext="{x:Static services:LibraryManager.Instance}"
                  ItemsSource="{Binding FilteredMainLibraries}"
                  SelectedItemChanged="Tree_SelectedItemChanged"
                  ScrollViewer.HorizontalScrollBarVisibility="Disabled"/>
    </Grid>
</UserControl>
