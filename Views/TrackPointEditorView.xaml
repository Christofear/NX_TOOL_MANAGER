<UserControl x:Class="NX_TOOL_MANAGER.Views.TrackpointEditorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NX_TOOL_MANAGER.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="300"
             Background="#1E1E1E">
    <Grid>
        <!--
            This view is very simple. It just hosts the LibraryGridView and
            binds its DataContext to the DatClass provided by the PreviewPane.
            This allows it to display the list of trackpoints for editing.
        -->
        <local:LibraryGridView DataContext="{Binding DataContextClass, RelativeSource={RelativeSource AncestorType=UserControl}}"/>
    </Grid>
</UserControl>
