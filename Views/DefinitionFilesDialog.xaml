<Window x:Class="NX_TOOL_MANAGER.Views.DefinitionFilesDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Height="Auto" Width="600"
        FontFamily="Segoe UI"
        Background="#1E1E1E"
        Foreground="White"
        WindowStyle="None" 
        AllowsTransparency="True"
        WindowStartupLocation="CenterOwner"
        SizeToContent="Height">

    <Window.Resources>
        <!-- Reusing styles similar to your LoadLibraryDialog for consistency -->
        <Style x:Key="CloseButtonStyle" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontFamily" Value="Segoe MDL2 Assets"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Width" Value="46"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" BorderThickness="0">
                            <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E81123"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="BrowseButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#333333"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#4A4A4A"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Width" Value="90"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#454545"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#2A2A2A"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ActionButtonStyle" TargetType="Button" BasedOn="{StaticResource BrowseButtonStyle}"/>

        <Style TargetType="TextBox">
            <Setter Property="Background" Value="#2A2A2A"/>
            <Setter Property="Foreground" Value="#CCCCCC"/>
            <Setter Property="BorderBrush" Value="#4A4A4A"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>
    </Window.Resources>

    <Border BorderBrush="#4A4A4A" BorderThickness="1">
        <DockPanel>
            <Grid DockPanel.Dock="Top" Height="32" Background="#2D2D2D" MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <TextBlock Text="Definition Files" Grid.Column="0" VerticalAlignment="Center" Margin="10,0,0,0" Foreground="#CCCCCC"/>
                <Button Grid.Column="1" Style="{StaticResource CloseButtonStyle}" Content="&#xE8BB;" Click="CloseButton_Click" IsCancel="True"/>
            </Grid>

            <Grid Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Row="0" Grid.Column="0" Text="Tool Definitions:" VerticalAlignment="Center" Margin="0,0,12,8" Foreground="#CCCCCC"/>
                <TextBox x:Name="ToolsDefTextBox" Grid.Row="0" Grid.Column="1" Text="{Binding ToolsDefPath, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,8"/>
                <Button Grid.Row="0" Grid.Column="2" Content="Browse..." Style="{StaticResource BrowseButtonStyle}" Click="PickToolsDef_Click" Margin="8,0,0,8"/>

                <TextBlock Grid.Row="1" Grid.Column="0" Text="Holder Definitions:" VerticalAlignment="Center" Margin="0,0,12,8" Foreground="#CCCCCC"/>
                <TextBox x:Name="HoldersDefTextBox" Grid.Row="1" Grid.Column="1" Text="{Binding HoldersDefPath, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,8"/>
                <Button Grid.Row="1" Grid.Column="2" Content="Browse..." Style="{StaticResource BrowseButtonStyle}" Click="PickHoldersDef_Click" Margin="8,0,0,8"/>

                <TextBlock Grid.Row="2" Grid.Column="0" Text="Shank Definitions:" VerticalAlignment="Center" Margin="0,0,12,8" Foreground="#CCCCCC"/>
                <TextBox x:Name="ShanksDefTextBox" Grid.Row="2" Grid.Column="1" Text="{Binding ShanksDefPath, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,8"/>
                <Button Grid.Row="2" Grid.Column="2" Content="Browse..." Style="{StaticResource BrowseButtonStyle}" Click="PickShanksDef_Click" Margin="8,0,0,8"/>

                <TextBlock Grid.Row="3" Grid.Column="0" Text="Track Point Definitions:" VerticalAlignment="Center" Margin="0,0,12,8" Foreground="#CCCCCC"/>
                <TextBox x:Name="TrackpointsDefTextBox" Grid.Row="3" Grid.Column="1" Text="{Binding TrackpointsDefPath, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,8"/>
                <Button Grid.Row="3" Grid.Column="2" Content="Browse..." Style="{StaticResource BrowseButtonStyle}" Click="PickTrackpointsDef_Click" Margin="8,0,0,8"/>

                <StackPanel Grid.Row="4" Grid.ColumnSpan="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,24,0,0">
                    <Button Content="Cancel" IsCancel="True" Style="{StaticResource ActionButtonStyle}" Margin="0,0,8,0"/>
                    <Button Content="OK" IsDefault="True" Style="{StaticResource ActionButtonStyle}" Click="Ok_Click"/>
                </StackPanel>
            </Grid>
        </DockPanel>
    </Border>
</Window>
