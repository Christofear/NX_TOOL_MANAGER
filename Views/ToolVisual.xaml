<UserControl x:Class="NX_TOOL_MANAGER.Views.ToolVisual"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid ClipToBounds="True">
        <!-- Layer 0: The background canvas for the grid and CSYS -->
        <Canvas x:Name="BackgroundCanvas" Background="#E0E0E0" SnapsToDevicePixels="True"/>

        <!-- Layer 1: The drawing canvas for the tool -->
        <Canvas x:Name="DrawingCanvas"/>

        <!-- Layer 2: The placeholder text -->
        <TextBlock x:Name="Placeholder"
                   Text="No Selection"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Foreground="#333333"
                   FontSize="16"/>

        <!-- ADDED: This TextBlock will display the tool type in the top-right corner -->
        <TextBlock x:Name="ToolTypeLabel"
                   HorizontalAlignment="Right"
                   VerticalAlignment="Top"
                   Margin="0,8,10,0"
                   Foreground="#495057"
                   FontWeight="SemiBold"
                   Opacity="0.9"/>
    </Grid>
</UserControl>

