<UserControl x:Class="NX_TOOL_MANAGER.Views.PreviewPane"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:NX_TOOL_MANAGER"
             xmlns:views="clr-namespace:NX_TOOL_MANAGER.Views"
             Background="#1E1E1E">
    <UserControl.Resources>
        <local:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <views:ToolVisual Grid.Row="0" 
                          ToolData="{Binding SelectedRow}"
                          Visibility="{Binding ShowToolVisual, Converter={StaticResource BooleanToVisibilityConverter}}"/>

        <!-- This ContentControl is the "host" that will display the correct editor -->
        <ContentControl Grid.Row="1" Content="{Binding CurrentEditorView}"/>
    </Grid>
</UserControl>

